<% layout('layouts/base') %>

<div class="container">
    <div class="bg-light rounded-lg p-4 mt-4">
        <h2>Add New Category</h2>
        <form class="mt-3" action="/products/category" method="post">
            <div class="mb-3">
              <label for="prodName" class="form-label">Category Name</label>
              <input type="text" class="form-control" id="catName" name="category[name]" aria-describedby="enter new product name">
            </div>
            <button type="submit" class="btn btn-primary">Create Category</button>
          </form>
    </div>
</div>